<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="8dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Xác nhận đơn hàng"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Thông tin giao hàng -->
        <TextView
            android:text="📦 Thông tin giao hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ nhận hàng"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách sản phẩm -->
        <TextView
            android:text="🧾 Sản phẩm trong đơn hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never" />

        <!-- Phương thức thanh toán -->
        <TextView
            android:text="💳 Phương thức thanh toán"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng (COD)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbBankTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển khoản ngân hàng" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/layoutBankInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp"
            android:background="#f1f1f1"
            android:layout_marginTop="8dp">

            <TextView
                android:text="🔔 Thông tin chuyển khoản:"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="🏦 Ngân hàng: Vietcombank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💳 Số tài khoản: 0123456789" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👤 Chủ tài khoản: Nguyễn Thị Thu Huyền" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Nội dung: [Họ tên] + [SĐT] + [Mã đơn hàng]" />
        </LinearLayout>

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tvSubtotal"
            android:text="Thành tiền: 0₫"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDiscount"
            android:text="- Giảm giá: 0₫"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvShippingFee"
            android:text="+ Phí giao hàng: 21000₫"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:text="Tổng cộng: 0₫"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#D32F2F"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Nút đặt hàng -->
        <Button
            android:id="@+id/btnConfirmOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛒 Đặt hàng"
            android:backgroundTint="#4A90E2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
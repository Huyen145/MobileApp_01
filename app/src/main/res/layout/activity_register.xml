<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="#FFFFFF">

            <!-- Logo -->
            <ImageView
                android:id="@+id/skypeLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:contentDescription="Logo"
                android:layout_marginTop="32dp"
                android:scaleType="fitCenter" />

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký tài khoản"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/skypeLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <!-- Họ và tên -->
            <EditText
                android:id="@+id/fullnameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:inputType="textPersonName"
                android:layout_below="@id/title"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Số điện thoại -->
            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:layout_below="@id/fullnameInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Ngày sinh -->
            <EditText
                android:id="@+id/birthDateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày sinh (dd/MM/yyyy)"
                android:inputType="date"
                android:layout_below="@id/phoneInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Địa chỉ -->
            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ"
                android:inputType="textPostalAddress"
                android:layout_below="@id/birthDateInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_below="@id/addressInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Mật khẩu -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:layout_below="@id/emailInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Nhập lại Mật khẩu -->
            <EditText
                android:id="@+id/rePasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:layout_below="@id/passwordInput"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Nút Đăng ký -->
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:layout_below="@id/rePasswordInput"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00AFF0"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

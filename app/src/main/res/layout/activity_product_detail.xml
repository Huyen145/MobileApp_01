<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Product_Detail">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hình ảnh -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/watch"
                android:background="#F5F5F5"
                android:layout_marginBottom="16dp" />

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm mẫu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <!-- Giá khuyến mãi -->
            <TextView
                android:id="@+id/product_sell_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₫1.000.000"
                android:textSize="18sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <!-- Giá thuê (tùy chọn) -->
            <TextView
                android:id="@+id/product_rent_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm: ₫100.000"
                android:textSize="14sp"
                android:textColor="#FFA000"
                android:layout_marginTop="4dp" />

            <!-- Đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:progressTint="@android:color/holo_orange_light"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:text="(124 đánh giá)"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#616161" />
            </LinearLayout>

            <!-- Phân loại -->
            <TextView
                android:text="Chọn phân loại"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <RadioGroup
                android:id="@+id/variantGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu đen" />

                <RadioButton
                    android:id="@+id/rbSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu bạc" />            </RadioGroup>

            <!-- Mô tả -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin chi tiết sản phẩm sẽ hiển thị tại đây..."
                android:textSize="14sp"
                android:textColor="#616161"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp" />

            <!-- Sản phẩm liên quan -->
            <TextView
                android:text="Sản phẩm liên quan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:layout_marginTop="24dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_related_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh phía dưới -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛒 Thêm giỏ hàng"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛍️ Mua ngay"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</RelativeLayout>
